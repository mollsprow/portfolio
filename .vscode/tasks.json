{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "jekyll serve",
      "type": "shell",
      "command": [
        "bundle",
        "exec",
        "jekyll",
        "serve"
      ],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "watchers"
      }
    },
    {
      "type": "npm",
      "script": "start",
      "path": "js_tools",
      "problemMatcher": [],
      "label": "npm: start - js_tools",
      "detail": "npm run build:dev && onchange \"tailwind.config.js\" \"../*.html\" \"../*.md\" \"../_layouts/*.html\" \"../_layouts/*.md\" \"../_tabs/*.html\" \"../_tabs/*.md\" -- npm run build:dev",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "watchers"
      }
    },
    {
      "label": "Run stuff",
      "dependsOn": [
        "npm: start - js_tools",
        "jekyll serve"
      ],
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "build",
      "path": "js_tools",
      "group": "build",
      "problemMatcher": [],
      "label": "npm: build - js_tools",
      "detail": "postcss ./src/**/*.css -o ../static/css/styles.css --env production"
    }
  ]
}
